<h1>Employee Leaves</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Reason</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Request employee</th>
      <th>Action employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_leaves.each do |employee_leafe| %>
      <tr>
        <td><%= employee_leafe.status %></td>
        <td><%= employee_leafe.reason %></td>
        <td><%= employee_leafe.start_date %></td>
        <td><%= employee_leafe.end_date %></td>
        <td><%= employee_leafe.Request_employee_id %></td>
        <td><%= employee_leafe.action_employee_id %></td>
        <td><%= link_to 'Show', employee_leafe %></td>
        <td><%= link_to 'Edit', edit_employee_leafe_path(employee_leafe) %></td>
        <td><%= link_to 'Destroy', employee_leafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

